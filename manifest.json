{
    "name": "re-reCaptcha",
    "version": "1.0",
    "description": "Solving reCaptchas is your new hobby!",
    "manifest_version": 2,
    "permissions": [
    	"background", 
    	"webRequest", 
    	"*://*"
    ],

    "icons": { 
    	"16": "icons/icon16.png",
    	"48": "icons/icon48.png",
        "128": "icons/icon128.png" 
    },  

    "background": {
	    "scripts": [
	    	"js/background.js"
	    ],
	    "persistent": true
  	}
}